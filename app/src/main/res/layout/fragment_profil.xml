<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/headerprofil"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/purplerounded2">

        <ImageView
            android:src="@drawable/bg_pattern"
            android:id="@+id/patern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:src="@drawable/pp"
            android:id="@+id/profilImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/profilName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="@font/p_regular"
            android:text="FreeDOS"
            android:layout_centerInParent="true"
            android:layout_below="@id/profilImage"

            />

        <TextView
            android:id="@+id/profilLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Level : 2"
            android:fontFamily="@font/p_regular"
            android:layout_centerInParent="true"
            android:layout_below="@+id/profilName"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/headerprofil"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_below="@id/headerprofil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/btnPengaturanProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/feather_settings"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/p_regular"
                        android:text="Ubah Profil"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <Button
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnBantuan"
                android:layout_below="@+id/btnPengaturanProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/feather_help_circle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/p_regular"
                        android:text="Bantuan"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <Button
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAboutUs"
                android:layout_below="@+id/btnBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/feather_info"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/p_regular"
                        android:text="Tentang Kami"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <Button
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnKeluar"
                android:layout_below="@+id/btnAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/feather_log_out"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:fontFamily="@font/p_regular"
                        android:text="Keluar"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <Button
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>